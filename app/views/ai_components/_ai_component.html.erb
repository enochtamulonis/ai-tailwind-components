<div id="<%= dom_id ai_component %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">HTML</strong>
    <%= ai_component.html_content&.first(100) %>...
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Created:</strong>
    <%= ai_component.created_at.strftime("%b %-d, %Y %-l:%M%P") %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this ai component", ai_component, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
