<div class="absolute h-56 w-56 bg-gray-400/75 backdrop-blur rounded-lg hidden z-50" id="<%= dom_id(user, :dropdown) %>" data-dropdown-target="menu">
  <% if user.active_subscription&.ignore_subscription? %>
    <div class="flex flex-col items-center gap-4 p-2">
      <%= link_to "Use subscripton in reports", admins_user_listen_to_subscription_path(user), class: "text-gray-900 text-lg", data: { turbo_method: :post } %>
    </div>
  <% else %>
    <div class="flex flex-col items-center gap-4 p-2">
      <%= link_to "Ignore Subscription", admins_user_ignore_subscription_path(user), class: "text-gray-900 text-lg", data: { turbo_method: :post } %>
    </div>
  <% end %>
</div>