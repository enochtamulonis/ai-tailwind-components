<%= form_with model: component_pack, url: url do |f| %>
  <div class="flex flex-col p-2">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <div class="flex flex-col p-2">
    <%= f.label :description %>
    <%= f.text_area :description %>
  </div>

  <div class="flex flex-col p-2 mb-4">
    <%= f.label :image %>
    <%= f.file_field :image %>
  </div>

  <div class="flex flex-col p-2 mb-4">
    <%= f.label :container_css %>
    <%= f.text_area :container_css %>
  </div>

  <%= f.submit class: "text-indigo-100 bg-indigo-500 rounded-lg p-2 cursor-pointer" %>
<% end %>