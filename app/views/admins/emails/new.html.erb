<h1 class="text-2xl text-center"> Create new Email </h1>

<div class="max-w-5xl w-full mx-auto bg-gray-500/75 rounded-lg">
  <%= form_with model: @email, url: admins_emails_path do |form| %>
    <div class="flex flex-col gap-4 p-4 w-3/4 mx-auto">
      <%= form.label :subject %>
      <%= form.text_field :subject %>

      <%= form.label :body %>
      <%= form.text_area :body %>

      <%= form.label :to_user_ids, "Send to" %>
      <%= form.text_area :to_user_ids %>

      <%= form.submit class: "bg-blue-500 text-blue-50 py-2 cursor-pointer hover:bg-blue-300 hover:text-blue-700" %>
    </div>
  <% end %>
</div>