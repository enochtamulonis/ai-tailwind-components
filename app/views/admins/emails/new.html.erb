<h1 class="text-2xl text-center mt-8"> Create new Email </h1>

<div class="max-w-4xl w-full mx-auto bg-gray-500/75 py-8 rounded-lg mt-8">
  <%= form_with model: @email, url: admins_emails_path do |form| %>
    <div class="flex flex-col gap-4 p-4 w-3/4 mx-auto">
      <%= form.label :subject %>
      <%= form.text_field :subject %>

      <%= form.label :body %>
      <%= form.text_area :body, class: "h-[40vh]" %>

      <div class="flex items-center">
        <%= form.label :send_to_all, "Send To All", class: "mr-2" %>
        <%= form.check_box :send_to_all %>
      </div>

      <%= form.submit class: "bg-blue-500 text-blue-50 py-2 cursor-pointer hover:bg-blue-300 hover:text-blue-700" %>
    </div>
  <% end %>
</div>