<%- if controller_name != 'sessions' %>
  <%= link_to "Log in", new_session_path(resource_name),
              class: "bg-gray-500 hover:bg-gray-700 text-white hover:text-gray-200 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full block text-center"
  %><br/>
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "Sign in with #{omniauth_name(OmniAuth::Utils.camelize(provider))}", omniauth_authorize_path(resource_name, provider),
                class: "bg-gray-500 hover:bg-gray-700 text-white hover:text-gray-200 font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline w-full",
                method: :post, data: { turbo: false }
    %><br />
  <% end %>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "Forgot Password?", new_user_password_path(resource_name),
              class: "font-bold text-sm text-gray-900 hover:text-gray-800"
  %> <br/>
<% end %>

 <%- if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "Sign up", new_registration_path(resource_name),
                class: "font-bold text-sm text-gray-900 hover:text-gray-800"
    %><br />
<% end %>


<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation info?", new_user_confirmation_path(resource_name),
              class: "font-bold text-sm text-gray-900 hover:text-gray-800"
  %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock info?", new_user_unlock_path(resource_name),
              class: "font-bold text-sm text-gray-900 hover:text-gray-800"
  %><br />
<% end %>
